<%- model_class = User -%>
<div class="page-header">

  <%= image_tag profile_picture(@user) %>

</div>
<div>

</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>


  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @user.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @user.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @user.country %></dd>
  <dt style="margin-left: -39px;
      width: 200px;"><strong>Languages You can speak:</strong></dt>
  <dd><%= @user.languages_spoken %></dd>
  <dt style="margin-left: -47px;
      width: 210px;"><strong>Languages you want to learn:</strong></dt>
  <dd><%= @user.languages_learn %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
    root_path, :class => 'btn'  %>
  <%unless current_user == @user%>

    <%= link_to "Send Message", new_message_path(:user_id => @user.id), :class => "btn" %>

  <%end%>

</div>
