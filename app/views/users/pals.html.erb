<div class="row" style="margin-left: 10px;">
  <%unless @users.blank?%>
    <%@users.each do |user|%>
      <div class="col-md-4">
	<%= link_to user.email, user_path(user) %>
	<span id="<%= user.id %>">
	    offline
	</span>
	
	<%= link_to "Unfriend", unfriend_user_path(user) %>
      </div>
    <%end%>
  <%else%>
    You have no Pals
  <%end%>
</div>